<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Agrega aquí los elementos para descripción, ubicación, foto y otros datos -->
    <ImageView
        android:id="@+id/placeImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/place_image"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/placeDescriptionTextView"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/placeDescriptionTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/placeImageView"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descripción del lugar"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="16dp" />

    <!-- Agrega otros elementos aquí -->

</androidx.constraintlayout.widget.ConstraintLayout>
